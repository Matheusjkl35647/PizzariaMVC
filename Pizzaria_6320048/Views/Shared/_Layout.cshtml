                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/#cardapio">Cardápio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/#sobre">Sobre nós</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/#contato">Contato</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/About">Blog</a>
                    </li>
                </ul>
            </center>
        </div>
    </nav>

    @RenderBody()


    <div class="wrapper">
        <div class="push"></div>
    </div>
    <footer class="footer">
        <hr />
        <center>
            <div class="row">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3671.2012755113933!2d-46.363777885556615!3d-23.053081348901973!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94cea34ac6d1827b%3A0xa5d7ed4eac0e5e7b!2sPizzaria%20Porta%20Maggiori!5e0!3m2!1spt-BR!2sbr!4v1623961516780!5m2!1spt-BR!2sbr" width="400" height="250" style="border: 50px; left: 12%; position:relative" allowfullscreen="" loading="lazy"></iframe>
                <div class="col-md-4">
                    <h5>Atalhos</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" href="~/Cardapio/Index">Cardápio</a></li>
                        <li><a class="text-muted" href="~/Cardapio/Index1">Editar Cardápio</a></li>
                        <li><a class="text-muted" href="~/Home/#sobre">Sobre</a></li>
