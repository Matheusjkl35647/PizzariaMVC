                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" href="https://instagram.com.br">Instagram</a></li>
                        <li><a class="text-muted" href="https://Facebook.com.br">Facebook</a></li>
                        <li><a class="text-muted" href="https://Twitter.com.br">Twitter</a></li>
                        <li><a class="text-muted" href="https://Youtube.com.br">Youtube</a></li>
                    </ul>
                </div>
            </div> <br />
        </center>
        <center><p style="color: white"> &copy; @DateTime.Now.Year | Matheus J. Santos - RA: 6320048 </p></center>
    </footer>

    @Scripts.Render("~/bundles/jquery")
